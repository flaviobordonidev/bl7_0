<div id="<%= dom_id user %>">

  <p>
    <% if user.profile_image.attached? %>
      <%#= image_tag user.profile_image.variant(resize_to_limit: [100, 100]).processed.url %>
      <%#= image_tag user.profile_image.variant(resize_to_limit: [150, 150]) %>
      <%#= image_tag user.profile_image %>
      <%= image_tag user.profile_image.variant(resize_to_fit: [250, 250]).processed.url %>
    <% else %>
      Nessuna immagine presente
    <% end %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= user.username %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>Language:</strong>
    <%= user.language %>
  </p>

  <p>
    <strong>Role:</strong>
    <%= user.role %>
  </p>

  <p>
    <strong>Encrypted password:</strong>
    <%= user.encrypted_password %>
  </p>

</div>