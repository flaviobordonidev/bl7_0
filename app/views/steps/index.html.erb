<p style="color: green"><%= notice %></p>

<h1><%= @steps.first.lesson.name %></h1>

<h2> Steps </h2>

<div id="steps">
  <% @steps.each do |step| %>
    <%#= render step %>
    <%# Non facciamo render step perchÃ© step ha il form nascosto che si visualizza solo alla fine del video %>

    <p>
      <%= step.lesson.name + "(lesson: " + step.lesson_id.to_s + ")" %> <br/>
      <strong>Question:</strong>
      <%= step.question %>
    </p>

    <p>
      <strong>Answer instructor:</strong>
      <%= step.answer %>
    </p>

    <p>
      <strong>Answers students:</strong>
      <ul>
        <% step.answers.each do |answer| %>
          <li>
            <%= answer.content %> - by <%= answer.user.name %>
          </li>
        <% end %>
      </ul>
    </p>




    <p>
      <%#= link_to "Show this step", step %>
      <%= link_to "Show this step", lesson_step_path(@lesson, step) %>
      <%= link_to 'Show this Lesson', [@lesson] %>
    </p>
  <% end %>
</div>

<%#= link_to "New step", new_step_path %>
<%= link_to 'New Step', new_lesson_step_path(@lesson) %>
